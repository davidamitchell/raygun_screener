@model IEnumerable<TrelloIntegration.Models.Card>
@{
    ViewBag.Title = "Cards";
}

<h3>@Html.ActionLink("Boards", "Index", "Boards") > @ViewBag.Title</h3>


@{
    if (Model.Count() == 0)
    {
        <p>
            No results found
        </p>
    }
}
<ul>
    @foreach (var card in Model)
    {
        <li>
            @Html.ActionLink(@card.Name, "Detail", new { id = card.Id })
        </li>
    }
</ul>